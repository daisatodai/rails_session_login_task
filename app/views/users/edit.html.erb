<h1><%= t('.title') %></h1>
<% if @user.errors.any? %>  
  <div id="error_explanation">
    <h2>アカウントの更新に失敗しました</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :"名前" %>
  <%= f.text_field :name %>
  <%= f.label :"メールアドレス" %>
  <%= f.email_field :email %>
  <%= f.label :"パスワード" %>
  <%= f.password_field :password %>
  <%= f.label :"パスワード（確認）" %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "更新する" %>
<% end %>
<%= render 'form', user: @user %>
<%= link_to t('common.back'), user_path, id: "back" %>
